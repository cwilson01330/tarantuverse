# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tarantuverse

# API Security
API_SECRET_KEY=your-secret-key-here-change-in-production
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Configuration
